<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DFEAEF"
    tools:context=".ProfilFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/top_app">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="@color/darkLighter3Mode"
                        android:text="Profile" />
                </LinearLayout>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="378dp"
                android:layout_height="574dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16.5dp"
                android:layout_marginEnd="16.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="24dp">

                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:background="@drawable/ic_profile"
                        android:layout_marginTop="8dp" />
                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="102dp"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_marginTop="8dp"
                            android:text="Rafael Vista"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="13dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Depok, Jawa Barat"
                            android:textColor="@color/black"
                            android:textSize="8sp" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="11dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Edit Profile"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            app:backgroundTint="#B9E0F0"
                            app:cornerRadius="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="296dp"
                    android:layout_marginTop="158dp"
                    android:layout_marginHorizontal="32dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/accessibility"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/account_safety"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/manage_account"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>